server {
    listen 80;
    listen [::]:80;

    server_name www.weblenny.at weblenny.at;

    location / {

########## Removing .html extension
        if ($request_uri ~ ^/(.*)\.html$) {
            return 301 /$1;
        }
        try_files $uri $uri.html $uri/ =404;

        gzip_static on;
        limit_except GET { deny all; }
        root /srv/http/weblenny-homepage;
        index index.html;

    }

}
